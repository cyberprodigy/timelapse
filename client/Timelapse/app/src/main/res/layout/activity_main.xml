<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="lv.enthusiast.timelapse.MainActivity"
    android:textAlignment="center"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight=".30"
            android:layout_height="match_parent"
            android:text="Server IP"
            android:gravity="center_vertical|center_horizontal" />
        <EditText
            android:layout_height="wrap_content"
            android:id="@+id/serverIp_txt"
            android:layout_gravity="center_horizontal"
            android:layout_width="0dp"
            android:layout_weight=".60"
            android:text="192.168.0.10" />
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Con"
            android:layout_weight=".05"
            android:id="@+id/connectServer_btn" />
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Dis"
            android:layout_weight=".05"
            android:id="@+id/disconnectServer_btn" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="200dp"
        android:layout_height="140dp"
        android:id="@+id/preview_frm"
        android:textAlignment="center">
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="&lt;&lt;"
            android:layout_weight=".5"
            android:id="@+id/turnLeftMore_btn" />
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="&lt;"
            android:layout_weight=".5"
            android:id="@+id/turnLeft_btn" />
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="&gt;"
            android:layout_weight=".5"
            android:id="@+id/turnRight_btn" />
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="&gt;&gt;"
            android:layout_weight=".5"
            android:id="@+id/turnRightMore_btn" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight=".50"
            android:layout_height="match_parent"
            android:text="Capt. angle:"
            android:gravity="center_vertical|center_horizontal" />
        <EditText
            android:layout_width="0dp"
            android:layout_weight=".30"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/angle_txt"
            android:text="90" />
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Test angle"
            android:layout_weight=".1"
            android:id="@+id/testAngle_btn" />
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Return"
            android:layout_weight=".1"
            android:id="@+id/returnTestAngle_btn" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight=".30"
            android:layout_height="match_parent"
            android:text="Duration:"
            android:gravity="center_vertical|center_horizontal" />
        <EditText
            android:layout_width="0dp"
            android:layout_weight=".30"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/captureTime_txt"
            android:text="3" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight=".30"
            android:layout_height="match_parent"
            android:text="hours"
            android:gravity="center_vertical|left" />
    </LinearLayout>

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/startCapture_swc"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Idle..."
        android:id="@+id/log_txt" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText" />

</LinearLayout>
